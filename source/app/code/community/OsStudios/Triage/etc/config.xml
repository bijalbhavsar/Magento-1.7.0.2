<config>
    <modules>
        <OsStudios_Triage>
            <version>0.1.0.0</version>
        </OsStudios_Triage>
    </modules>
    <global>
        <helpers>
            <triage>
                <class>OsStudios_Triage_Helper</class>
            </triage>
        </helpers>
        <models>
            <triage>
                <class>OsStudios_Triage_Model</class>
            </triage>
            <checkout>
                <rewrite>
                    <cart>OsStudios_Triage_Model_Checkout_Cart</cart>
                </rewrite>
            </checkout>
        </models>
        <blocks>
            <triage>
                <class>OsStudios_Triage_Block</class>
            </triage>
        </blocks>
        <events>
            <log_log_clean_after>
                <observers>
                    <catalog_product_compare_item>
                        <class>catalog/observer</class>
                        <method>catalogProductCompareClean</method>
                    </catalog_product_compare_item>
                </observers>
            </log_log_clean_after>
            <page_block_html_topmenu_gethtml_before>
                <observers>
                    <catalog_add_topmenu_items>
                        <class>catalog/observer</class>
                        <method>addCatalogToTopmenuItems</method>
                    </catalog_add_topmenu_items>
                </observers>
            </page_block_html_topmenu_gethtml_before>
        </events>
    </global>
    <adminhtml>
        <translate>
            <modules>
                <OsStudios_Triage>
                    <files>
                        <default>OsStudios_Triage.csv</default>
                    </files>
                </OsStudios_Triage>
            </modules>
        </translate>
    </adminhtml>
    <default>
        <triage>
            <general>
                <enabled>0</enabled>
                <offline_message>To purchase this product you need to login in the system.</offline_message>
                <notingroup_message>You're not allowed to purchase this product. Please contact us for more information.</notingroup_message>
            </general>
        </triage>
    </default>
</config>
